section#profile img {
    width:100%;
}

/** Own Videos **/
section#myVideos a.link-wrapper {
    width:32%;
    float:left;
    margin-right:2%;
    margin-bottom:2%;
    position:relative;
    z-index:1;
}

section#myVideos a.link-wrapper:hover .popupMenu {
    display:block;
}

section#myVideos a.link-wrapper:nth-child(3n+2) {
    margin-right:0%;
}

section#myVideos a.link-wrapper img {
    width:100%;
}

section#myVideos a.link-wrapper .popupMenu {
    position: absolute;
    bottom:0;
    background:#444444;
    width:100%;
    box-sizing: border-box;
    color:#FFF;
    padding:2% 1% 2% 2%;
    z-index:5;
    display:none;
}


section#myVideos a.link-wrapper .popupMenu span {
    float:right;
    margin-right:2%;
    padding-top:1%;
    cursor: pointer;
}
