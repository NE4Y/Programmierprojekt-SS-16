/* --- Video Playlist Funktionen - Overlays --- */

section#pl_add button,section#video-info button.playlistbutton {
    background: #E54D34;
    color: #FFFFFF;
    padding: 1.5%;
    border-radius: 0.3em;
    border:none;
    transition: 0.5s;
    display: inline-block;
}


section#pl_add button:hover,section#video-info button:not(.disabled):hover {
    background: #FFFFFF;
    padding: 1.5%;
    border-radius: 0.4em;
    color:#E54D34;
    transition: 0.5s;
}


