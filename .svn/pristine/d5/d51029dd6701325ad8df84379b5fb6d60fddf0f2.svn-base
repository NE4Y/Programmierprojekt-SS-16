footer {
    width: 100%;
    font-size: 1.5em;
    color: #FFF;
    background:url("../img/video_of_the_week.png") no-repeat;
    bottom:0;
    min-height:10%;
}

footer ul {
    list-style-type:none;
    width:90%;
    margin:0px auto;
}

footer ul li {
    float:left;
    width:33%;
    padding-top:2%;
    padding-bottom:2%;
    text-align:center;
}


footer a {
    color: #FFF;
    text-align:center;
    font-size:0.8em;
}

footer a:hover {
    color: #22A7F0;
    text-decoration: none;
}

