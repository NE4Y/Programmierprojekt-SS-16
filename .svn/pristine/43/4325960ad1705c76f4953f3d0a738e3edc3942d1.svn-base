}

section#topratedplaylist label {
    background: #22A7F0;
}

ul label {
    font-size:0.75em;
}

label {
    padding: 0.5%;
}

li label {
    padding: 2%;
}

.playlist_labels {
    display:block;
    margin-top: 1%;
}

.playlist_rating i {
    margin: 1% 0.5% 0 0;
}

section#newestplaylist button,
section#topratedplaylist button,
section#yourplaylists button {
