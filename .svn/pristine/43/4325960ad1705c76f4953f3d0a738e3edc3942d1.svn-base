section#yourplaylists, section#allplaylists, section#newestplaylist, section#topratedplaylist{
    padding:5% 10% 10%;
    width:100%;
}

section #playlist_admin_view p{
     display: inline;
     cursor: pointer;
     color: #337ab7;
 }

section #playlist_admin_view p:hover{
    text-decoration: underline;
}

/*Newest Play List*/

section#newestplaylist {
    background:url("../img/wolf_blue.png") no-repeat;
    background-size:cover;
    color: #fff;
}

.playlist_view li {
    list-style: none;
}

.playlist_view ul {
    margin:0;
    padding:0;
}

.playlist_view ul.playlist_list {
    list-style: none;
    width:100%;
    display: inline-block;
    margin: 3% 0 0 0;
    padding: 0;
    border-radius: 0.3em;
}

.playlist_view ul.playlist_list li {
    display: inline;
}

.playlist_view ul.playlist_list article {
    cursor:pointer;
    overflow: hidden;
    width:15%;
    float: left;
    position:relative;
    margin: 2% 0 0 1.5%;
}


.playlist_view ul.playlist_list li:first-child article {
    width:20%;
    margin:0;
}

.playlist_view ul.playlist_list article img {
    width:100%;
    transition:0.5s all;
}

.playlist_view ul.playlist_list li:first-child img.img_playlistvideo {
    min-width:150px;
    min-height:150px;
}

.playlist_view ul.playlist_list article img.img_playlistvideo {
    min-width:110px;
    min-height:110px;
    transition:0.5s all;
}

.playlist_view ul.playlist_list article .image_text {
    position: absolute;
    top: 5%;
    left:5%;
    color: #FFF;
    font-size: 1.3em;
    width:80%;
    text-shadow: 2px 2px #000;
    font-family: 'Josefin Sans', sans-serif;
    font-weight:400;
    overflow: hidden;
}

.playlist_view ul.playlist_list li:first-child .image_text p {
    -webkit-line-clamp: 2; /* number of lines to show */
}


.playlist_view ul.playlist_list article .image_text p {
    max-height:3em;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1; /* number of lines to show */
}


.playlist_view ul.playlist_list article .image_text span {
    font-weight:100;
    display:block;
}

.playlist_view .playlist_list span.play {
    position:absolute;
    width:30%;
    opacity:0.8;
    text-shadow: 1px 1px #444;
    transition: 0.5s all;
    z-index:10;
    margin:0 auto;
    top:45%;
    right: 0;
    left:0;
}

.playlist_view .playlist_list span.play img {
    filter: brightness(0) invert(1);
    -webkit-filter: brightness(0) invert(1);
}

.playlist_view .playlist_list span.play:hover img {
    -webkit-filter:none;
    filter:none;
}

.playlist_view .playlist_list li:first-child span.play {
}

.playlist_view h2 i {
    margin-right:1%;
    text-shadow: 1px 1px #444;
}

.playlist_view ul.playlist_list article:hover img {
    -webkit-transform:scale(1.25); /* Safari and Chrome */
    -moz-transform:scale(1.25); /* Firefox */
    -ms-transform:scale(1.25); /* IE 9 */
    -o-transform:scale(1.25); /* Opera */
    transform:scale(1.25);
}

.playlist_view ul.playlist_list article:hover span.play {
    opacity:1;
    -webkit-transform:scale(1.05); /* Safari and Chrome */
    -moz-transform:scale(1.05); /* Firefox */
    -ms-transform:scale(1.05); /* IE 9 */
    -o-transform:scale(1.05); /* Opera */
    transform:scale(1.05);
}

#wrapper hr {
    border:1px dotted #E54D34;
    margin-top: 2%;
}

/*Top Rated Playlist*/

section#topratedplaylist {
    background: url("../img/video_of_the_week.png");
    background-size:cover;
    color:#FFFFFF;
}

section#topratedplaylist hr {
    border:1px dotted #E54D34;
    margin-top:2%
}

h2 {
    font-family: 'Lobster', sans-serif;
    text-shadow: 1px 1px #e54d43;
}

section#topratedplaylist h2 {
    text-shadow: 1px 1px #22A7F0;
}

h3 {
